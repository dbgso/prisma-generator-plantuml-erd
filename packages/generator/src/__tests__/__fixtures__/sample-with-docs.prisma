datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// User status enum
/// This tracks user account status
enum UserStatus {
  /// Active user account
  ACTIVE @map("active")
  /// Pending verification
  PENDING @map("pending")
  /// Banned user
  BANNED @map("banned")
}

model User {
  id     Int        @id @default(autoincrement())
  email  String     @unique
  status UserStatus

  @@unique([email, status])
  @@map("users")
}
